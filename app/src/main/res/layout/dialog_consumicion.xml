<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_dialog_consumicion"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:src="@drawable/random_user"
                    android:padding="10dp"
                    android:layout_weight="2"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="3">
                    <Button
                        android:id="@+id/btn_dialog_consumicion_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:text="Cancelar"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="5dp"/>
                    <Button
                        android:id="@+id/btn_dialog_consumicion_change"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:text="Cambiar tipo"
                        android:layout_marginRight="5dp"/>
                    <Button
                        android:id="@+id/btn_dialog_consumicion_submit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:text="Aceptar"
                        android:layout_marginRight="5dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/txt_dialog_consumicion_nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:textSize="30dp"/>
                <TextView
                    android:id="@+id/txt_dialog_consumicion_room"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Habitación"
                    android:gravity="center"
                    android:textSize="25dp"/>
                <TextView
                    android:id="@+id/txt_dialog_consumicion_pension"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pensión"
                    android:gravity="center"
                    android:textSize="20dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:id="@+id/lv_menus">
                    <TextView
                        android:id="@+id/txt_dialog_consumicion_menus_restantes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Menús: 90"
                        android:layout_marginLeft="10dp"
                        android:textSize="20dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_right"/>
                    <TextView
                        android:id="@+id/txt_dialog_consumicion_menus_nuevos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="89"
                        android:layout_marginLeft="10dp"
                        android:textSize="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:id="@+id/lv_desayunos">
                    <TextView
                        android:id="@+id/txt_dialog_consumicion_desayunos_restantes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Desayunos: 90"
                        android:layout_marginLeft="10dp"
                        android:textSize="20dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_right"/>
                    <TextView
                        android:id="@+id/txt_dialog_consumicion_desayunos_nuevos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="89"
                        android:layout_marginLeft="10dp"
                        android:textSize="20dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/txt_dialog_consumicion_numero_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Número de consumiciones"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:textSize="15dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:id="@+id/lv_number_picker">
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_dialog_consumicion_menos"
                        android:text="-"/>
                    <TextView
                        android:id="@+id/txt_dialog_consumicion_numero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:text="1"
                        android:layout_gravity="center"
                        android:textSize="20dp"/>
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_dialog_consumicion_mas"
                        android:text="+"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/txt_dialog_consumicion_fecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha y hora"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textSize="15dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>